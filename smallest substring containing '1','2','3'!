#include <bits/stdc++.h>
 
using namespace std;
 
int main() {
    int t;
    string s;
    cin >> t;
    for (int q = 0; q < t; ++q) {
        cin >> s;
        int min_len = s.length();
        bool found = false;
        if (s.find('1') != string::npos && s.find('2') != string::npos && s.find('3') != string::npos) {
            int one = 0;
            int two = 0;
            int three = 0;
            string s1 = "p" + s;
            for (int i = 1; i < s1.length(); i++) {
                if (s1[i] == '1') {
                    one = i;
                }if (s1[i] == '2') {
                    two = i;
                }if (s1[i] == '3') {
                    three = i;
                }
                if (one != 0 && two != 0 && three != 0) {
                    min_len = min(min_len, (max(one, max(two, three)) - min(one, min(two, three))));
                }
            }
            cout << min_len + 1 << endl;
        }else {
            cout << 0 << endl;
        }
    }
    return 0;
}

